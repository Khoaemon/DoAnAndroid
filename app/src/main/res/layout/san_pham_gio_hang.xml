<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <ImageView
        android:id="@+id/imgSanPhamGioHang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_android"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTenSachGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên sách"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imgSanPhamGioHang" />

    <TextView
        android:id="@+id/textViewGiaSachGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá bán"
        android:textSize="20dp"
        android:textColor="#f00"
        app:layout_constraintTop_toBottomOf="@+id/textViewTenSachGioHang"
        app:layout_constraintLeft_toRightOf="@+id/imgSanPhamGioHang"/>

    <Button
        android:id="@+id/buttonTang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="+"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaSachGioHang"
        app:layout_constraintLeft_toRightOf="@+id/textViewSL"
         />

    <Button
        android:id="@+id/buttonGiam"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaSachGioHang"
        app:layout_constraintLeft_toRightOf="@+id/imgSanPhamGioHang" />

    <Button
        android:id="@+id/buttonHuy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="X"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textViewSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewGiaSachGioHang"
        app:layout_constraintLeft_toRightOf="@+id/buttonGiam" />

</androidx.constraintlayout.widget.ConstraintLayout>